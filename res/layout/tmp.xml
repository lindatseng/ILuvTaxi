<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:weightSum="1" >
        <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:background="#ff000000"
                android:layout_height="3px" />
 
        <Button
            android:id="@+id/home_bt_route1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:layout_weight="0.5"
            android:background="#ffeeeebb"
            android:drawableTop="@drawable/route"
            android:gravity="center"
            android:text="Route"
            android:textColor="#ff355689"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/home_bt_pricer1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="#ffeeeebb"
            android:text="Pricer" 
            android:textStyle="bold"
            android:textColor="#ff355689"
            android:textSize="18sp"
            android:drawableTop="@drawable/home_btn_starred_default"/>
        <View

                android:layout_width="wrap_content"
                android:background="#ff000000"
                android:layout_height="3px" />

    </LinearLayout>
    
        

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_weight="2"
        android:gravity="bottom" >
        
        <LinearLayout
        android:background="@color/background1"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff335555"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="14dip"
                android:paddingRight="14dip"
                android:paddingTop="10dip" >

        <TextView
            android:id="@+id/now_playing_title"
            android:duplicateParentState="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#ffffffff"
            android:text="計費方式採用台北市"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/now_playing_subtitle"
            android:gravity="left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:paddingTop="3dip"
            android:singleLine="true"
            android:text="非夜間加成時段收費"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:background="#ff000000"
                android:layout_height="5px" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff335555"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="14dip"
                android:paddingRight="14dip"
                android:paddingTop="10dip" >
        
                <TextView
            android:id="@+id/now_playing_subtitle"
            android:duplicateParentState="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_size_small"
            android:text="infomation"
            android:singleLine="true"
            android:ellipsize="end" />
            </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_width="5px"
        android:layout_height="fill_parent"
        android:background="#ff000000" />
    <ImageButton
        android:background="#ff553355"
        android:id="@+id/now_playing_more"
        android:src="@drawable/call"
        android:padding="12dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"

        android:scaleType="center" />
    

    </LinearLayout>
    

</LinearLayout>